{
  "name": "chanshige/whoisproxy",
  "description": "chanshige's whois search api.",
  "type": "project",
  "license": "MIT",
  "homepage": "https://whoisproxy.info",
  "authors": [
    {
      "name": "Shigeki Tanaka",
      "email": "dev@shigeki.tokyo",
      "homepage": "https://shigeki.jp"
    }
  ],
  "require": {
    "php": ">=7.3.0",
    "slim/slim": "^3.0",
    "slim/http-cache": "^0.4",
    "chanshige/slim-bodycache": "*",
    "davidepastore/slim-validation": "*",
    "monolog/monolog": "^1.23",
    "chanshige/whois": "^5.0",
    "predis/predis": "^1.0",
    "symfony/cache": "^4.0",
    "symfony/process": "^4.0",
    "vlucas/phpdotenv": "^2.0",
    "ext-json": "*",
    "ext-intl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.1",
    "squizlabs/php_codesniffer": "*",
    "phpmd/phpmd": "*"
  },
  "autoload": {
    "files": [
      "extend.function.php"
    ],
    "psr-4": {
      "Chanshige\\WhoisProxy\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Chanshige\\WhoisProxy\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "7.3.0"
    }
  },
  "scripts": {
    "test": [
      "phpmd src text ./phpmd.xml",
      "phpcs src",
      "phpunit"
    ]
  }
}
